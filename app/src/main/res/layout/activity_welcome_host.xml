<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    tools:context="in.tvac.akshayejh.firebasepushnotifications.WelcomeHostActivity">

    <LinearLayout
        android:id="@+id/tabs_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/missingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_semibold"
            android:padding="15dp"
            android:text="Missing"
            android:textColor="@color/textTabBright"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/arrivedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_semibold"
            android:padding="15dp"
            android:text="Arrived"
            android:textColor="@color/textTabLight"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/escortLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_semibold"
            android:padding="15dp"
            android:text="Escorted"
            android:textColor="@color/textTabLight"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/welcomedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_semibold"
            android:padding="15dp"
            android:text="Welcomed"
            android:textColor="@color/textTabLight"
            android:textSize="13sp" />


    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/mainPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tabs_layout"></android.support.v4.view.ViewPager>

</RelativeLayout>
